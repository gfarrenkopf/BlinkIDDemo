    <application
        android:icon="@drawable/icon"
        android:label="@string/app_name"
        android:theme="@android:style/Theme.NoTitleBar.Fullscreen" >
        <activity
            android:name="com.microblink.blinkid.demo.customui.MenuActivity"
            android:label="@string/app_name"
            android:screenOrientation="sensor" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.microblink.blinkid.demo.customui.MyScanActivity"
            android:screenOrientation="portrait"
            android:label="@string/title_activity_my_scan" >
        </activity>
        <activity
            android:name="com.microblink.blinkid.result.ResultActivity"
            android:screenOrientation="sensor"
            android:label="@string/title_activity_my_scan" >
        </activity>
        <activity
            android:name="com.microblink.blinkid.result.FormActivity"
            android:screenOrientation="sensor"
            android:label="voter_registration_form" >
        </activity>
        <activity
            android:name="com.microblink.blinkid.result.MapActivity"
            android:screenOrientation="sensor"
            android:label="map" >
        </activity>
        <meta-data android:name="com.google.android.geo.API_KEY" android:value="AIzaSyBaCvW-ECV3y-eHSV6VGTibKjlkI_xxteI"/>
